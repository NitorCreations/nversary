{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "handler.ts",
    "domain/**/*.ts",
    "repository/**/*.ts",
    "service/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "test/**/*"
  ]
}
